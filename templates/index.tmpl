<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random Word Meaning</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        html, body {
            height: 100%; /* Ensure html and body take full height */
            margin: 0; /* Remove default margin */
            overflow: hidden; /* Prevent scrolling */
        }
        body {
            font-family: 'Georgia', serif; /* Use a serif font for a classic look */
            background-color: #f4f1e6; /* Light beige background */
            color: #333; /* Dark text color */
            text-align: center; /* Center text */
            display: flex;
            flex-direction: column;
            padding: 20px; /* Add some padding */
        }
        main {
            flex: 1; /* Allow main to occupy remaining space */
            max-width: 800px; /* Max width of content */
            margin: auto; /* Center content */
            padding: 40px; /* Internal spacing */
            background: rgba(255, 255, 255, 0.9); /* Slightly opaque white background */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Soft shadow for main */
            border: 1px solid #ccc; /* Light border */
            overflow: auto; /* Allow scrolling within the main if needed */
        }
        h1 {
            color: #5a3e36; /* Dark brown title color */
            margin-bottom: 10px; /* Adjust margin for spacing */
            font-size: 2.5em; /* Larger font size */
            text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.5); /* Soft shadow for text */
        }
        .decorative-line {
            width: 50%; /* Width of the line */
            height: 4px; /* Height of the line */
            background-color: #8b5a2b; /* Brown color for the line */
            margin: 10px auto; /* Center the line */
            border-radius: 5px; /* Rounded corners */
        }
        p {
            margin: 20px 0; /* Spacing between paragraphs */
            font-size: 1.2em; /* Paragraph font size */
            line-height: 1.6; /* Line spacing */
            color: #5a3e36; /* Dark brown paragraph text color */
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: #8b5a2b; /* Brown button color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s; /* Smooth transitions */
            font-family: 'Georgia', serif; /* Use the same font for the button */
        }
        button:hover {
            background-color: #6f4c3e; /* Darker brown on hover */
            transform: scale(1.05); /* Scale effect on hover */
        }
        #meaning {
            margin-top: 20px;
            font-size: 1.5em; /* Larger font size for meaning */
            color: #5a3e36; /* Dark brown text color for meaning */
            display: none; /* Initially hidden */
            padding: 10px;
            border-radius: 5px; /* Rounded corners */
            background-color: rgba(255, 255, 255, 0.8); /* Slightly opaque background */
            /* Removed border */
        }
    </style>
</head>
<body>
    <main>
        <section id="home">
            <h1>Random Word Meaning</h1>
            <div class="decorative-line"></div> <!-- Decorative line -->
            <p>Click the button below to get a random word and its meaning.</p>
            <button id="randomWordButton" onclick="showRandomWord()">Random Word</button>
            <h2 id="word" style="display: none;"></h2> <!-- Title for the word -->
            <div id="meaning"></div>
        </section>
    </main>

    <footer>
        <p>Developed with ❤️ by <a href="https://github.com/raulfb">raulfb</a></p>
    </footer>

    <script>
        function showRandomWord() {
            fetch('/random-word')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('word').innerText = data.word; // Set the word as the title
                    document.getElementById('word').style.display = 'block'; // Show the word title
                    document.getElementById('meaning').innerText = data.meaning; // Set the meaning
                    document.getElementById('meaning').style.display = 'block'; // Show the meaning
                })
                .catch(error => {
                    console.error('Error fetching the word:', error);
                });
        }
    </script>
</body>
</html>